{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Distribution of Away Goals",
    "projection": {"type": "equalEarth"},
    "data": {
    "url": "https://raw.githubusercontent.com/Ankush-De/3179/main/Data_Vis_2/data/WorldCupMatches.csv"},
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
    "data": {
      "url": "https://raw.githubusercontent.com/Ankush-De/3179/main/Vegalite_W9/js/ne_110m_countries_map.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
          "key": "Away_Team",
          "fields": ["Away_Team_Goals"]
        }
      }
    ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Ankush-De/3179/main/Vegalite_W9/js/ne_110m_countries_map.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "calculate": " datum.properties.NAME + ' has not scored a Away Goal in  any tournament'",
            "as": "note"
          }
        ],
        "mark": {
          "type": "geoshape",
          "fill": "#ddd",
          "stroke": "white",
          "strokeWidth": 1
        },
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Ankush-De/3179/main/Data_Vis_2/data/WorldCupMatches.csv"
        },
        "transform": [
          {
            "lookup": "Away_Team",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Ankush-De/3179/main/Vegalite_W9/js/ne_110m_countries_map.json",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries"
                }
              },
              "key": "properties.NAME"
            },
            "as": "geo"
          }
        ],
        "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
        "encoding": {
          "shape": {"field": "geo", "type": "geojson"},
          "color": {
            "field": "Away_Team_Goals",
            "type": "quantitative",
            "scale": {"scheme": "blues"},
            "legend": {"format": ".1s"}
          },
          "tooltip": [
            {"field": "Away_Team_Goals", "type": "quantitative", "title": "Away Goals Scored"},
            {"field": "Attendance", "type": "nominal", "title": "Average Attendance"}
          ]
        }
      }
    ]
  }